{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "allowJs": true,
    "target": "ES2020",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ],
    "rootDir": "./"
  },
  "include": [
    "src/**/*",
    "handler.ts"
  ]
}
