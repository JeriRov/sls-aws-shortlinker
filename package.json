{
  "name": "sls-aws-shortlinker",
  "version": "1.0.0",
  "description": "Serverless API for shortening long links.",
  "scripts": {
    "build": "sls package",
    "build:tsc": "tsc & sls package",
    "deploy": "sls deploy --stage prod",
    "dev": "docker-compose up -d & sls offline start --reloadHandler --ignoreJWTSignature",
    "docs:win": "rmdir /s /q swagger & sls generate-swagger",
    "docs:mac": "rm -rf swagger && sls generate-swagger",
    "lint": "eslint --fix src handler.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "serverless",
    "aws",
    "shortlinker"
  ],
  "author": "Artem Magei",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.6",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "serverless-auto-swagger": "^2.12.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-global-table-v2-plugin": "^1.2.2",
    "serverless-esbuild": "^1.49.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^13.3.0",
    "serverless-scriptable-plugin": "^1.3.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-eventbridge": "^3.454.0",
    "@aws-sdk/client-ses": "^3.454.0",
    "@aws-sdk/client-sqs": "^3.454.0",
    "@aws-sdk/util-dynamodb": "^3.450.0",
    "@middy/core": "^4.7.0",
    "@middy/http-error-handler": "^4.7.0",
    "@middy/http-header-normalizer": "^4.7.0",
    "@middy/http-json-body-parser": "^4.7.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/bcryptjs": "^2.4.6",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "bcryptjs": "^2.4.3",
